{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "CommonJS",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": ".",
        "allowJs": true,
        "baseUrl": "src",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "pretty": true,
        "noFallthroughCasesInSwitch": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "noEmit": false,
    },
    "include": [
        "lib/**/*.ts",
        "lib/**/*.json",
        "tests",
        "src",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}